<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginBottom="@dimen/padding_5dp"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:orientation="horizontal"
    android:background="#E6E6E6">

    <ImageView
        android:id="@+id/foto_game"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:src="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/foto_game"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp">

        <TextView
            android:id="@+id/judul_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NieR:Automata"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/platform_game"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@color/colorPrimary" />

            <TextView
                android:id="@+id/harga_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Rp579.000,00" />
        </LinearLayout>

        <TextView
            android:id="@+id/genre_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action, RPG"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
</RelativeLayout>

